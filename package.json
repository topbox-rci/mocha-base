{
    "name": "@topbox-rci/mocha-base",
    "version": "6.0.0",
    "description": "Shared mocha stuff.",
    "repository": {
        "type": "git",
        "url": "ssh://git@github.com:topbox-rci/mocha-base.git"
    },
    "files": [
        "helpers"
    ],
    "scripts": {
        "test": "npm run lint && npm run unit",
        "lint": "eslint 'helpers/**/*.js' 'test/**/*.js'",
        "unit": "nyc --reporter=text-summary --reporter=lcov --reporter=cobertura mocha --exit \"test/**/*.spec.js\""
    },
    "nyc": {
        "temp-directory": "./coverage/.nyc_output"
    },
    "mocha": {
        "require": [
            "./test/mocha-setup.js",
            "esm"
        ]
    },
    "devDependencies": {
        "@babel/core": "^7.9.6",
        "@babel/preset-env": "^7.9.6",
        "@babel/preset-react": "^7.9.4",
        "@babel/register": "^7.9.0",
        "@istanbuljs/nyc-config-babel": "^3.0.0",
        "@topbox-rci/eslint-config": "^2.0.1",
        "babel-plugin-istanbul": "^6.0.0",
        "coveralls": "^3.1.1",
        "eslint": "^8.5.0",
        "esm": "^3.2.25"
    },
    "dependencies": {
        "@babel/eslint-parser": "^7.16.5",
        "@wojtekmaj/enzyme-adapter-react-17": "^0.6.2",
        "chai": "^4.3.4",
        "chance": "^1.0.18",
        "enzyme": "^3.11.0",
        "jsdom": "^19.0.0",
        "mocha": "^9.1.3",
        "nyc": "^15.1.0",
        "prop-types": "^15.7.2",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "sinon": "^12.0.1"
    }
}
